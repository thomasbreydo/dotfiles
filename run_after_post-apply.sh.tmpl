#!/usr/bin/env bash

set -ueo pipefail




#####################################################
# ADD BREW FORMULAE/CASKS BELOW #####################
#####################################################
cat > Brewfile <<- EOF
{{ if .has_root -}}

############################
# We have root access, so:
############################
brew "fish"
cask "gpg-suite"
cask "mactex"
cask "hiddenbar"
cask "rectangle"
############################

{{ else -}}

##################################
# We don't have root access, so:
##################################
cask_args appdir: "~/Applications"
##################################

{{ end -}}

##################################
# We don't need root access for:
##################################
brew "pyenv"
brew "pyenv-virtualenv"
brew "gh"
brew "chruby"
brew "chruby-fish"
##################################

EOF
#####################################################
#####################################################
#####################################################







#####################################################
# CONVENIENCE FUNCTIONS #############################
#####################################################
chezlog() {
    echo "[chezmoi] $1"
}

prompt_yn() {
    while true; do
        read -p "$1 (y/n)? " yn
        case $yn in
            [Yy]* ) return 1;;
            [Nn]* ) return 0;;
        esac
    done
}

check() {
    chezlog "Checking if $1 is installed"
    if ! which $1 > /dev/null 2>&1; then
        return 1
    fi
    chezlog "$1 executable found at $(which $1)"
    return 0
}
#####################################################
#####################################################
#####################################################







#####################################################
# HOMEBREW ##########################################
#####################################################
echo
if ! check brew; then
    chezlog "Homebrew installation not found"
    {{ if .has_root }}
    chezlog "Installing Homebrew as root"
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
    {{ else }}
    chezlog "Installing Homebrew to ~/.homebrew"
    mkdir -p $HOME/.homebrew
    pushd $HOME
    curl -L https://github.com/Homebrew/brew/tarball/master | tar xz --strip 1 -C .homebrew
    eval "$(.homebrew/bin/brew shellenv)"
    brew update --force --quiet
    chmod -R go-w "$(brew --prefix)/share/zsh"
    popd
    {{ end }}
    chezlog "Successfully installed Homebrew"
fi

echo
chezlog "Using brew bundle with the following Brewfile:"
cat Brewfile
brew bundle
chezlog "Successfully ran brew bundle"

{{ if not .has_root -}}
echo
chezlog "Installing gnupg since gpg-suite requires sudo"
# Brewfile doesn't realize this might need to be built from source
brew install gnupg
chezlog "Successfully installed gnupg"
{{ end -}}
#####################################################
#####################################################
#####################################################








#####################################################
# FISH ##############################################
#####################################################
echo
if ! check fish; then
    chezlog "fish installation not found"
    chezlog "Installing fish with brew"
    brew install fish
    chezlog "Successfully installed fish"
fi

echo
chezlog "Checking if login shell is set to fish"
if [[ $SHELL != `which fish` ]]; then
    chezlog "Login shell is currently $SHELL"
    chezlog "Attempting to set the login shell to $(which fish)"
    while ! chsh -s `which fish`; do
        if ! prompt_yn "Failed, try again"; then
            break;
        fi
        chezlog "Trying again"
    done
else
    chezlog "Login shell is set to fish"
fi

echo
if ! check fisher; then
    fish -c 'curl -sL https://git.io/fisher | source && fisher install jorgebucaran/fisher'
    chezlog "Successfully installed fisher"
fi


echo
chezlog "Updating fisher"
fish -c 'fisher update'
chezlog "Successfully updated fisher"

FPLUGINS=""
FPLUGINS="$FPLUGINS jethrokuan/z"
FPLUGINS="$FPLUGINS jhillyerd/plugin-git"
FPLUGINS="$FPLUGINS oh-my-fish/theme-agnoster"
FPLUGINS="$FPLUGINS oh-my-fish/plugin-pyenv" 
chezlog "Using fisher to install the following fish plugins:"
echo $FPLUGINS | tr " " "\n"
fish -c "fisher install $FPLUGINS"
chezlog "Successfully installed fish plugins with fisher"

#####################################################
#####################################################
#####################################################


